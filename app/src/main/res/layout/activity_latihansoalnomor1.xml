                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_bold"
                                    android:scaleType="fitCenter"
                                    android:text="D. 0"
                                    android:textColor="@color/black"></TextView>
